<!-- Add the modal markup -->
<div class="modal fade" id="friendListModal" tabindex="-1" role="dialog" aria-labelledby="friendListModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="friendListModalLabel">Friend List</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <table>
  <thead>
    <tr>
      <th class="hidden">User</th>
      <th class="hidden">Action</th>
    </tr>
  </thead>
  <tbody>
    <div style="border:1px solid black;text-align: center;width: 50%;background-color: yellow;">
      <b>Name:</b>
      <%= current_user.full_name %> </br>
      <b>Email:</b>
      <%= current_user.email %> </br>
   </div>
  </tbody>
</table>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
